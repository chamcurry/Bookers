<h1>Books</h1>
<%if @book.errors.any?%>
 <%=@book.errors.count %>
<ul>
    <% @book.errors.full_messages.each do |message|%>
    <li><%=message %></li>
    <% end %>
</ul>
<% end %>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |books| %>
        <tr>
            <td><%= books.title %></td>
            <td><%= books.body %></td>
            <td><%= link_to "Show",book_path(books.id)%></td>
            <td><%= link_to "Edit",edit_book_path(books.id)%></td>
            <td><%= link_to "Destroy","/books/#{books.id}",method: :delete,"data-confirm"=>"Are you sure?"%></td>
        </tr>
        <% end %>
    </tbody>
</table>
<%= form_with model:@book do |f| %>
<h2>New book</h2>
    <label for ="book-title">Title</label>
    <div class="book-title"><%=f.text_field :title %></div>

    <label for ="book-body">Body</label>
    <div class= "book-body"><%=f.text_area :body %></div>
    <%=f.submit 'Create Book' %>
<% end %>



